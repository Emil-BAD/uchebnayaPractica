<Window x:Class="uchebnayaPractica.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uchebnayaPractica"
        mc:Ignorable="d"
        Title="SignIn" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Width="400" >
            <TextBlock HorizontalAlignment="Center" Text="Регистрация" FontSize="24"/>
            <TextBlock HorizontalAlignment="Left" Text="Логин:" Margin="16 0 0 0"/>
            <TextBox Width="200" x:Name="LoginInput" Margin="0 0 0 0"/>
            <TextBlock HorizontalAlignment="Left" Text="Пароль:" Margin="16 0 0 0"/>
            <PasswordBox Width="200" x:Name="PasswordInput" Margin="0 0 0 15"/>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Image x:Name="CaptchaImage" Width="160" Height="60" Stretch="Uniform"/>
                <Button x:Name="BtnRefreshCaptcha" Content="Обновить" Margin="0 15 0 0" Click="BtnRefreshCaptcha_Click" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </StackPanel>
            <TextBlock HorizontalAlignment="Left" Text="Введите код с картинки:"/>
            <TextBox Width="120" x:Name="CaptchaInput" Margin="0 0 0 15"/>

            <Button Content="Зарегистрироваться" Width="150" Click="SignInButton_Click"/>
            <TextBlock x:Name="StatusText" Margin="0 10 0 0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
