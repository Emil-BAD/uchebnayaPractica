<Window x:Class="uchebnayaPractica.Organizator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Organizator" MinHeight="400" MinWidth="700" Height="400" Width="700">
    <Grid>
        <!-- Используем пропорциональное распределение пространства -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Первая колонка будет занимать 1/3 пространства -->
            <ColumnDefinition Width="*" />
            <!-- Вторая колонка будет занимать 1/3 пространства -->
            <ColumnDefinition Width="*" />
            <!-- Третья колонка будет занимать 1/3 пространства -->
        </Grid.ColumnDefinitions>

        <!-- Заголовок, занимающий всю ширину и меняющий размер в зависимости от экрана -->
        <TextBlock 
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Text="Окно"
            FontSize="24"
            HorizontalAlignment="Center"
            x:Name="Header"
            Margin="0,10,0,20" />

        <!-- Стек с профилем, с адаптивной картинкой -->
        <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Center">

            <Image x:Name="Photo" Height="Auto" Width="Auto" Stretch="Uniform" Margin="10" />
           
            <TextBlock HorizontalAlignment="Center" Text="Мой профиль"/>
        </StackPanel>

        <!-- Стек с приветствием и кнопками -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="GreetingText" HorizontalAlignment="Center" FontSize="24"/>
            <TextBlock x:Name="UserNameText" HorizontalAlignment="Center" FontSize="16" Margin="0,5,0,15"/>

            <Button Content="Мероприятия" HorizontalAlignment="Stretch" Height="60" Margin="0 10 0 0"/>
            <Button Content="Участники" HorizontalAlignment="Stretch" Height="60" Margin="0 10 0 0"/>
            <Button Content="Жюри" HorizontalAlignment="Stretch" Height="60" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
