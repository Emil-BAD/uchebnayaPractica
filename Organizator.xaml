<Window x:Class="uchebnayaPractica.Organizator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Organizator" Height="400" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0">
            <Image x:Name="Photo" Height="300"/>
            <TextBlock HorizontalAlignment="Center" Text="Мой профиль"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock x:Name="GreetingText" HorizontalAlignment="Center" FontSize="24"/>
            <TextBlock x:Name="UserNameText" HorizontalAlignment="Center" FontSize="16" Margin="0,5,0,15"/>

            <Button Content="Мероприятия" Width="225" Height="60" Margin="0 10 0 0"/>
            <Button Content="Участники" Width="225" Height="60" Margin="0 10 0 0"/>
            <Button Content="Жюри" Width="225" Height="60" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
